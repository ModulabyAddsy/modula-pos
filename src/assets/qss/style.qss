    color: #0078d4;
    font-size: 12px;
    text-decoration: underline;
}
#SecondaryLink:hover {
    color: #005a9e;
}
#SecondaryLinkRed {
    background-color: transparent;
    border: none;
    color: #dc2626; /* Rojo para acciones como 'olvidé contraseña' */
    font-size: 12px;
